#!/bin/sh

set -e

THIS_PACKAGE=libgl1-mesa-glx
THIS_SCRIPT=preinst

cleanup_alternatives() {
  update-alternatives --remove ${DEB_HOST_MULTIARCH}_gl_conf \
    /usr/lib/${DEB_HOST_MULTIARCH}/mesa/ld.so.conf
  ldconfig
}

case "$1" in
  upgrade)
    if dpkg --compare-versions "$2" lt "17.1.5-1endless1" ; then
      cleanup_alternatives
    fi
    ;;

esac

#DEBHELPER#

exit 0
